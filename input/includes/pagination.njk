<div class="pagination">
    <ul>
        <li class="first{% if pagination.pageNumber === 0 %} disabled{% endif %}"><a href="{{ "/" | url }}">First</a></li>
        <li class="prev{% if pagination.pageNumber === 0 %} disabled{% endif %}"><a href="{{ pagination.previousPageLink | url | removeIndexHtml }}">Prev</a></li>
        <li class="current disabled"><a href="{{ page.url | url | removeIndexHtml }}">{{ pagination.pageNumber + 1 }} <span>/</span> {{ pagination.pageLinks.length }}</a></li>
        <li class="next{% if pagination.pageNumber === pagination.pageLinks.length - 1 %} disabled{% endif %}"><a href="{{ pagination.nextPageLink | url | removeIndexHtml }}">Next</a></li>
        <li class="last{% if pagination.pageNumber === pagination.pageLinks.length - 1 %} disabled{% endif %}"><a href="{{ "/" | url }}page-{{ pagination.pageLinks.length }}/">Last</a></li>
    </ul>
</div>