<!doctype html>
<html lang="en">
    <head>
        <meta http-equiv="content-type" content="text/html;charset=UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="{{ seo_description or title }}">
        <meta name="theme-color" content="{{ cfg.themeColor }}">
        <title>{{ title | pageTitle}}</title>
        <link rel="stylesheet" href="{{ cfg.css | url }}">
        <link rel="shortcut icon" href="{{ cfg.favicon | url }}">
        <meta name="theme-color" content="#1B1F24">
        <link rel="canonical" href="{{ page.url | httpUrl }}">
    </head>
    <body>
        <div class="main-wrap">
            <header>
                <div class="container header-links">
                    {% include "headerlinks.njk" %}
                </div>
                <div class="container header-content">
                    {% block breadcrumb %}
                        <a href="{{ "/" | url }}" class="about-link">rolandtoth</a>
                    {% endblock %}
                    <div>
                        {% block headerslot %}{% endblock %}
                        <div class="contact">
                            {% include "contact.njk" %}
                        </div>
                    </div>
                </div>
            </header>
            <div class="main-content">
                <div class="container">
                    {% block main %}{% endblock %}
                    <footer>
                        <p>&copy; rolandtoth {{ "now" | dateDisplay("year") }} Â· Created with <a href="https://www.11ty.io/" target="_blank" rel="noopener">Eleventy</a></p>
                    </footer>
                </div>
            </div>
        </div>
        {% for script in cfg.scripts %}
        <script src="{{ script | url | buildTimestamp }}" async></script>
        {% endfor %}
    </body>
</html>
